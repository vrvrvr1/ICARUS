<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Product List</title>
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    
  <!-- Header -->
  <header class="header">
    <h1>Admin Dashboard</h1>
        <a href="/logout" class="btn-logout">Logout</a>
  </header>

  <!-- Sidebar -->
  <div class="sidebar">
    <h2>ADMIN</h2>
    <a href="/admin">Dashboard</a>
    <a href="/adminproducts" class="active">Products</a>
    <a href="/orders">Orders</a>
    <a href="/customers">Customers</a>
  </div>

  <!-- Main Content -->
  <div class="main">
    
    <!-- Topbar -->
    <div class="topbar">
      <h2>Product List</h2>
      <div>
        <a href="/addproduct" class="btn">Add Product</a>
        <select class="filter">
          <option>This Month</option>
          <option>Last Month</option>
          <option>All Time</option>
        </select>
      </div>
    </div>

    <!-- Product Table -->
    <div class="table-container">
      <h3>All Product List</h3>
      <table>
        <tr>
          <th>Product Name</th>
          <th>Price</th>
          <th>Stock</th>
          <th>Category</th>
          <th>Action</th>
        </tr>

        <% if (products.length === 0) { %>
          <tr>
            <td colspan="5">No products available.</td>
          </tr>
        <% } else { %>
          <% products.forEach(product => { %>
            <tr>
              <td><%= product.name %></td>
              <td>$<%= Number(product.price).toFixed(2) %></td>
              <td>
                <%= product.stock %> items left <br>
                <small><%= product.sold || 0 %> sold</small>
              </td>
              <td><%= product.category %></td>
              <td>
                  <a href="/adminproducts/<%= product.id %>" class="btn-action">
                    <i class="bi bi-eye-fill"></i>
                  </a>
                  <a href="/adminproducts/<%= product.id %>/edit" class="btn-action">
                    <i class="bi bi-pencil-fill"></i>
                  </a>
                  <form action="/adminproducts/<%= product.id %>/delete" method="POST" style="display:inline;">
                  <button type="submit" class="btn-action" onclick="return confirm('Are you sure you want to delete this product?')">
                    <i class="bi bi-trash3-fill"></i>
                  </button>
                </form>
              </td>
            </tr>
          <% }) %>
        <% } %>
      </table>
    </div>
  </div>

</body>
</html>
