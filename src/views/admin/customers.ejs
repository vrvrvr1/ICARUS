<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Customers</title>
  <link rel="stylesheet" href="/css/admin.css">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.css">
</head>
<body>
    
  <!-- Header -->
  <header class="header">
    <h1>Admin Dashboard</h1>
            <a href="/logout" class="btn-logout">Logout</a>
  </header>

  <!-- Sidebar -->
  <div class="sidebar">
    <h2>ADMIN</h2>
    <a href="/admin">Dashboard</a>
    <a href="/adminproducts">Products</a>
    <a href="/orders">Orders</a>
    <a href="/customers" class="active">Customers</a>
  </div>

  <!-- Main Content -->
  <div class="main">
    
    <!-- Topbar -->
    <div class="topbar">
      <h2>Customers</h2>
      <div>
        <select class="filter">
          <option>This Month</option>
          <option>Last Month</option>
          <option>All Time</option>
        </select>
      </div>
    </div>

    <!-- Customer Table -->
    <div class="table-container">
      <h3>All Customers</h3>
      <table>
        <tr>
          <th>Username</th>
          <th>Email</th>
          <th>Role</th>
          <th>Total Orders</th>
          <th>Action</th>
        </tr>

        <% if (customers.length === 0) { %>
          <tr>
            <td colspan="5">No customers found.</td>
          </tr>
        <% } else { %>
          <% customers.forEach(customer => { %>
            <tr>
              <td><%= customer.username %></td>
              <td><%= customer.email %></td>
              <td><%= customer.role %></td>
              <td><%= customer.total_orders || 0 %></td>
              <td>
                <button class="btn-action"><i class="bi bi-eye-fill"></i></button>
                <button class="btn-action"><i class="bi bi-pencil-fill"></i></button>
                <button class="btn-action"><i class="bi bi-trash3-fill"></i></button>
              </td>
            </tr>
          <% }) %>
        <% } %>

      </table>
    </div>
  </div>

</body>
</html>
