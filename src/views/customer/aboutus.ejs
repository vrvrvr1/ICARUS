<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>About Us</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/css/aboutus.css">
</head>
<body>
    <!-- Header -->
    <%- include ("../partials/header.ejs") %>

        <!-- Hero -->
        <section class="hero-section hero-about">
            <div class="container container-narrow">
                <div class="hero-row">
                    <div class="hero-left">
                        <div class="hero-card">
                                                        <h1 class="hero-title"><%= (cmsAbout && cmsAbout.about_title) || 'About Us' %></h1>
                                                        <p class="hero-sub"><%= (cmsAbout && cmsAbout.about_subtitle) || '' %></p>
                                                        <div class="key-features">
                                                            <% if (cmsAbout && cmsAbout.features && cmsAbout.features.length) { %>
                                                                <ul>
                                                                    <% cmsAbout.features.forEach(function(f){ %>
                                                                        <li><%= f %></li>
                                                                    <% }) %>
                                                                </ul>
                                                            <% } %>
                                                        </div>
                        </div>
                    </div>
                    <div class="hero-right">
                                                <div class="team-card" style="max-width:420px;">
                                                    <img src="<%= (cmsAbout && cmsAbout.about_image_url) ? cmsAbout.about_image_url : '/image/home1.png' %>" alt="Hero image" style="width:100%;border-radius:12px;object-fit:cover;">
                                                </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Why Choose -->
        <section class="mission-section py-5">
            <div class="container container-narrow">
                <div class="row align-items-center">
                    <div class="col-lg-7">
                        <h2 class="section-title"><%= (cmsAbout && cmsAbout.why_title) || 'Why Choose Icarus Wear?' %></h2>
                        <p class="muted"><%= (cmsAbout && cmsAbout.why_body) || '' %></p>
                    </div>
                    <div class="col-lg-5">
                        <div class="content-card">
                                                        <h5>Key Features</h5>
                                                        <ul>
                                                            <% if (cmsAbout && cmsAbout.key_features && cmsAbout.key_features.length) { %>
                                                                <% cmsAbout.key_features.forEach(function(f){ %>
                                                                    <li><%= f %></li>
                                                                <% }) %>
                                                            <% } %>
                                                        </ul>
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Professional Meet The Team -->
        <!-- Professional Meet The Team (2x2 portrait grid) -->
        <section class="team-section clean py-5 team-section-mock">
            <div class="container">
                <div class="team-intro text-center mb-5">
                    <span class="eyebrow"><%= (cmsAbout && cmsAbout.team_title) || 'KEY PEOPLE & CONTRIBUTORS' %></span>
                    <h2 class="section-title">Meet the Team</h2>
                    <p class="muted"><%= (cmsAbout && cmsAbout.team_subtitle) || '' %></p>
                </div>

                    <!-- Founders highlight row -->
                    <div class="founders-row mb-4">
                        <div class="founders container d-flex justify-content-center gap-4">
                            <% if (cmsAbout && cmsAbout.team && cmsAbout.team.length) { %>
                                <% cmsAbout.team.forEach(function(m, idx){ var img = m.image_url || ('/image/m' + ((idx % 5) + 1) + '.png?v=4'); %>
                                    <div class="founder-card text-center">
                                        <div class="founder-media" style="background-image:url('<%= img %>')"></div>
                                        <h4 class="founder-name"><%= m.name %></h4>
                                        <p class="founder-role"><%= m.role %></p>
                                    </div>
                                <% }) %>
                            <% } %>
                        </div>
                    </div>

                    <div class="team-grid professional-team">
                        <div class="team-top-grid">
                            <!-- non-founder team members -->
                        </div>

                        <div class="team-bottom-row">
                            <!-- other non-founder team members will appear here -->
                        </div>
                    </div>
            </div>
        </section>

        <!-- Footer -->
        <footer>
            <%- include ("../partials/footer.ejs") %>
        </footer>

        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    </body>
    </html>
                                