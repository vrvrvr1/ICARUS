    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize the carousel with auto-play
            const myCarousel = document.getElementById('foundersCarousel');
            const carousel = new bootstrap.Carousel(myCarousel, {
                interval: 2000,
                wrap: true
            });
            
            // Play/Pause button functionality
            const playPauseButton = document.getElementById('carouselPlayPause');
            let isPlaying = true;
            
            if (playPauseButton) {
                playPauseButton.addEventListener('click', function() {
                    if (isPlaying) {
                        carousel.pause();
                        playPauseButton.innerHTML = '<i class="fas fa-play"></i>';
                    } else {
                        carousel.cycle();
                        playPauseButton.innerHTML = '<i class="fas fa-pause"></i>';
                    }
                    isPlaying = !isPlaying;
                });
                
                // Pause carousel when user hovers over it
                myCarousel.addEventListener('mouseenter', function() {
                    carousel.pause();
                    if (isPlaying) {
                        playPauseButton.innerHTML = '<i class="fas fa-play"></i>';
                    }
                });
                
                // Resume carousel when user stops hovering (if it was playing)
                myCarousel.addEventListener('mouseleave', function() {
                    if (isPlaying) {
                        carousel.cycle();
                        playPauseButton.innerHTML = '<i class="fas fa-pause"></i>';
                    }
                });
            }
        });
    </script>
