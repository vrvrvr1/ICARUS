<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Shopping Cart</title>
  <link rel="stylesheet" href="/css/cart.css">
</head>
<body>

<div class="cart-container">

  <!-- Cart Products -->
  <div class="cart-products">
    <div class="cart-header">
      <span>Select</span>
      <span>Product</span>
      <span>Price</span>
      <span>Quantity</span>
      <span>Total</span>
    </div>

    <div class="cart-items">
      <% if (cartItems.length > 0) { %>
        <% cartItems.forEach(item => { %>
          <div class="cart-item" data-price="<%= item.price %>">
            
            <!-- Checkbox for selection -->
            <div class="select-item">
              <!-- value is cart row id so server can identify exact cart entries -->
              <input type="checkbox" name="checkoutItems" value="<%= item.id %>" checked class="checkout-checkbox">
            </div>

            <!-- Product Info -->
            <div class="product-info">
              <div class="product-image-container">
                <img src="<%= item.image_url || '/images/default.png' %>" alt="<%= item.product_name %>">
              </div>
              <div class="product-details">
                <p class="product-name"><%= item.product_name %></p>
                <div class="product-attributes">
                  <% if (item.color) { %>
                    <span class="attribute">Color: <%= item.color %></span>
                  <% } %>
                  <% if (item.size) { %>
                    <span class="attribute">Size: <%= item.size %></span>
                  <% } %>
                </div>

                <!-- Remove Form -->
                <form action="/cart/remove" method="POST" class="remove-form">
                  <input type="hidden" name="product_id" value="<%= item.product_id %>">
                  <input type="hidden" name="color" value="<%= item.color %>">
                  <input type="hidden" name="size" value="<%= item.size %>">
                  <button class="remove-btn" type="submit">Remove</button>
                </form>
              </div>
            </div>

            <!-- Price -->
            <div class="price">$<%= Number(item.price).toFixed(2) %></div>

            <!-- Quantity Controls -->
            <div class="quantity">
              <form action="/cart/update" method="POST" class="quantity-form">
                <input type="hidden" name="product_id" value="<%= item.product_id %>">
                <input type="hidden" name="color" value="<%= item.color %>">
                <input type="hidden" name="size" value="<%= item.size %>">
                <input type="hidden" name="quantity" value="<%= item.quantity %>">

                <button class="qty-btn minus" type="submit" name="action" value="minus">-</button>
                <span><%= item.quantity %></span>
                <button class="qty-btn plus" type="submit" name="action" value="plus">+</button>
              </form>
            </div>

            <!-- Total -->
            <div class="total">$<%= (item.price * item.quantity).toFixed(2) %></div>
          </div>
        <% }) %>
      <% } else { %>
        <p class="empty-cart">Your cart is empty.</p>
      <% } %>
    </div>

    <!-- Cart Actions -->
    <% if (cartItems.length > 0) { %>
      <div class="cart-actions">
        <form action="/cart/clear" method="POST">
          <button class="btn clear" type="submit">Clear Cart</button>
        </form>
      </div>
    <% } %>
  </div>

  <!-- Order Summary / Checkout Form -->
  <% if (cartItems.length > 0) { %>
    <form id="checkout-form" action="/checkout" method="GET" class="order-summary">
      <!-- hidden input to carry selected cart row ids to the checkout GET handler -->
      <input type="hidden" name="items" id="checkout-items-input" value="">
      <h3>Order Summary</h3>

      <div class="summary-row">
        <span>Subtotal</span>
        <span id="subtotal">
          $<%= cartItems.reduce((acc, item) => acc + item.price * item.quantity, 0).toFixed(2) %>
        </span>
      </div>


      <!-- Removed shipping options: subtotal/total derived from selected items only -->
      <div class="summary-row">
        <span>Discount</span>
        <span id="discount">$0.00</span>
      </div>

      <div class="summary-total">
        <span>Total</span>
        <span id="grand-total">
          $<span id="grand-total-value"><%= cartItems.reduce((acc, item) => acc + item.price * item.quantity, 0).toFixed(2) %></span>
        </span>
      </div>

      <div class="checkout-actions">
        <button class="checkout-btn primary" type="submit">Proceed to Checkout</button>
        <a href="/products" class="checkout-btn secondary">Continue Shopping</a>
      </div>
    </form>
  <% } %>

</div>

<script>
  // Totals: compute subtotal/total from selected items only
  const subtotalEl = document.getElementById("subtotal");
  const grandTotalValueEl = document.getElementById('grand-total-value');

  // Intercept checkout submit and include only checked items in the hidden input
  const checkoutForm = document.getElementById('checkout-form');
  if (checkoutForm) {
    checkoutForm.addEventListener('submit', function(e){
      const checkedBoxes = Array.from(document.querySelectorAll('.checkout-checkbox:checked'));
      const checked = checkedBoxes.map(cb => cb.value);
      if (checked.length === 0) {
        e.preventDefault();
        alert('Please select at least one item to checkout.');
        return;
      }
      // Put the selected ids into the hidden input (form method=GET will include it in the querystring)
      const itemsParam = checked.join(',');
      const hidden = document.getElementById('checkout-items-input');
      if (hidden) hidden.value = itemsParam;
      // Recalculate totals based on currently selected items and update UI before submit
      recalcTotals();
      // allow submit to continue
    });
  }

  // Recalculate subtotal/total based on checked items and update DOM
  function recalcTotals() {
    const checkedBoxes = Array.from(document.querySelectorAll('.checkout-checkbox:checked'));
    let subtotal = 0;
    checkedBoxes.forEach(cb => {
      const itemEl = cb.closest('.cart-item');
      if (!itemEl) return;
      const price = parseFloat(itemEl.getAttribute('data-price')) || 0;
      // attempt to get quantity from the quantity span inside the item
      const qtySpan = itemEl.querySelector('.quantity span');
      const quantity = qtySpan ? parseInt(qtySpan.textContent) || 1 : 1;
      subtotal += price * quantity;
    });
    subtotalEl.textContent = '$' + subtotal.toFixed(2);
    grandTotalValueEl.textContent = subtotal.toFixed(2);
  }

  // Wire checkbox change events to recalc
  const allCheckboxes = Array.from(document.querySelectorAll('.checkout-checkbox'));
  allCheckboxes.forEach(cb => cb.addEventListener('change', recalcTotals));

  // Also recalc on page load to ensure initial state matches checked items
  recalcTotals();

  shippingOptions.forEach(opt => {
    opt.addEventListener("change", () => {
      const subtotal = parseFloat(subtotalEl.textContent.replace("$", ""));
      const shipping = parseFloat(opt.value);
      grandTotalEl.textContent = "$" + (subtotal + shipping).toFixed(2);
    });
  });
</script>

</body>
</html>
