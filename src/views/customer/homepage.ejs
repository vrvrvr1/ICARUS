</head>
<body>
<!-- Header -->
    <nav>
    <%- include ("../partials/header.ejs") %>
    </nav>

<!-- Image -->
    <section class="hero">
        <div class="hero-content">
            <h1 class="hero-title">Rise beyond <span class="highlight">limits</span></h1>
            <p class="hero-subtitle">Because limits are meant to be broken.</p>
            <a href="/products" class="cta-button">Shop the Collection</a>
        </div>
    </section>

<!-- Shop by Section -->
<section class="shop-by-section">
<div class="shop-by-container">
  <h2 class="shop-by-title">Shop by Gym Activewear</h2>
  <div class="shop-by-grid">
      <a href="/products#mens" class="shop-by-item">
          <img src="image/men.png" alt="Gym Activewear" class="shop-by-image">
          <span class="shop-by-text">Men's Apparel</span>
      </a>
      <a href="/products?category=women" class="shop-by-item">
          <img src="image/women.png" alt="Gym Accessories" class="shop-by-image">
          <span class="shop-by-text">Women's Apparel</span>
      </a>
       <a href="/products?category=unisex" class="shop-by-item">
          <img src="image/unisex.png" alt="Outdoor and Athleisure Apparel" class="shop-by-image">
          <span class="shop-by-text">Unisex</span>
      </a>
  </div>
</div>
</section>

<h2>STYLE THAT PERFORMS</h2>
<div class="underline"></div>

<!-- Carousel-->
<section>
  <div class="swiper-container">
    <div class="swiper">
      <div class="swiper-wrapper">
        <div class="swiper-slide">
          <div class="slider-content">
            <img src="image/carousel.png" />
          </div>
