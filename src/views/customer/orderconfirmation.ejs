<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Order Confirmation</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.8/dist/css/bootstrap.min.css" rel="stylesheet">
  <link rel="preconnect" href="https://fonts.googleapis.com">
  <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;500;600;700&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="/css/confirmation.css">
</head>
<body>
  <div class="container my-5 confirmation-wrap">
    <div class="row g-4 align-items-start">
      <!-- Left: Thank you + Billing -->
      <div class="col-lg-6">
        <div class="p-4 bg-white rounded-3 shadow-sm h-100 billing-slab">
          <h1 class="display-6 mb-3 fw-bold lh-sm">Thank you for your purchase!</h1>
          <p class="text-muted mb-4">Your order will be processed within 24 hours during working days. We will notify you by email once your order has been shipped.</p>

          <h2 class="h5 mt-4">Billing address</h2>
          <div class="row small gy-2 mt-2">
            <div class="col-4 text-muted">Name</div>
            <div class="col-8"><%= order.first_name %> <%= order.last_name %></div>
            <div class="col-4 text-muted">Address</div>
            <div class="col-8"><%= order.address %>, <%= order.city %>, <%= order.province %>, <%= order.zipcode %></div>
            <div class="col-4 text-muted">Phone</div>
            <div class="col-8"><%= order.phone %></div>
            <div class="col-4 text-muted">Email</div>
            <div class="col-8"><%= order.email %></div>
          </div>

          <div class="mt-4 d-flex justify-content-between align-items-center">
            <a href="/" class="btn btn-outline-dark rounded-pill px-4">Back to Home</a>
            <a href="/accountsettings?tab=orders" class="btn btn-brand rounded-pill px-4">Track Your Order</a>
          </div>
        </div>
      </div>

      <!-- Right: Order Summary Receipt -->
      <div class="col-lg-6">
        <div class="bg-white rounded-3 shadow-sm p-0 overflow-hidden receipt-card position-relative">
          <div class="receipt-tab"></div>
          <div class="px-4 pt-4 pb-3 border-bottom bg-light">
            <h3 class="h5 m-0">Receipt</h3>
          </div>
          <div class="px-4 py-3 border-bottom small summary-meta">
            <div class="row g-2">
              <div class="col-md-4">
                <div class="text-muted">Date</div>
                <div>
                  <%= new Date(order.created_at || Date.now()).toLocaleDateString('en-US', { day:'2-digit', month:'short', year:'numeric' }) %>
                </div>
              </div>
              <div class="col-md-4">
                <div class="text-muted">Order Number</div>
                <div>#<%= order.id %></div>
              </div>
              <div class="col-md-4">
                <div class="text-muted">Payment Method</div>
                <% const pmMap = { 'COD': 'Cash on Delivery', 'Card': 'Credit/Debit Card', 'PayPal': 'PayPal' }; %>
                <div><%= pmMap[order.payment_method] || order.payment_method %></div>
              </div>
            </div>
          </div>

          <!-- Items list -->
          <div class="px-4 py-3 border-bottom">
            <% if (items && items.length > 0) { %>
              <div class="vstack gap-3">
                <% items.forEach(item => { %>
                  <div class="d-flex align-items-start justify-content-between item-row">
                    <div class="d-flex align-items-start">
                      <img src="<%= item.image_url %>" alt="<%= item.product_name %>" width="56" height="56" class="rounded me-3 item-thumb" style="object-fit:cover;">
                      <div>
                        <div class="fw-semibold"><%= item.product_name %></div>
                        <div class="text-muted small">Qty: <%= item.quantity %></div>
                      </div>
                    </div>
                    <div class="fw-semibold amount">$<%= Number(item.price || 0).toFixed(2) %></div>
                  </div>
                <% }) %>
              </div>
            <% } else { %>
              <div class="text-muted small">No items found for this order.</div>
            <% } %>
          </div>

          <!-- Totals -->
          <% const shipVal = (typeof order.shipping === 'number') ? Number(order.shipping||0) : Math.max(0, Number(order.total||0) - Number(order.subtotal||0) - Number(order.tax||0)); %>
          <div class="px-4 py-3 border-bottom small totals-panel">
            <div class="d-flex justify-content-between mb-2"><span class="text-muted">Sub Total</span><span class="amount">$<%= Number(order.subtotal || 0).toFixed(2) %></span></div>
            <div class="d-flex justify-content-between mb-2"><span class="text-muted">Shipping</span><span class="amount">$<%= shipVal.toFixed(2) %></span></div>
            <div class="d-flex justify-content-between"><span class="text-muted">Tax</span><span class="amount">$<%= Number(order.tax || 0).toFixed(2) %></span></div>
          </div>
          <div class="px-4 py-3 d-flex justify-content-between align-items-center order-total">
            <div class="fw-semibold">Order Total</div>
            <div class="fw-bold fs-5 amount">$<%= Number(order.total || 0).toFixed(2) %></div>
          </div>
          <div class="px-4 pb-4 pt-2 small text-center receipt-footer">
            <div class="barcode mb-1" aria-hidden="true"></div>
            <div class="text-muted">Order #<%= order.id %></div>
          </div>
        </div>
      </div>
    </div>

  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
